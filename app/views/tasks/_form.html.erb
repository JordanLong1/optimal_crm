  <%= render partial: "shared/errors", locals: {model: @task} %>


<%= form_for(@task) do |f|%>

<%= f.hidden_field :salesrepresentative_id, value: current_user.id%>


<%= f.label "Title:" %>
<%=  f.text_field :title %>
<br>

<%= f.label "Content:" %>
<br>
<%= f.text_field :content %>
<br>

<%= f.label "Is the task complete?"%>
<br>
  <%= f.select(:complete, [["Yes", true], ["No", false]]) %>
<br>

<%=f.submit "Submit" %>

<% end %>