
    <%= render partial: "shared/errors", locals: {model: @lead} %>



    <%= form_for (@lead) do |f| %>
        <%= f.hidden_field :salesrepresentative_id, value: @lead.salesrepresentative_id%>
        <br><br>


        <%= f.label :name %>
        <%= f.text_field :name %>
        <br><br>

        <%= f.label :email%>
        <%= f.text_field :email %>

        <br><br>

        <%= f.label :phone_number%>
        <%= f.text_field :phone_number %>

        <br><br>

        <%= f.label :customer%>
         <%= f.select(:customer, [["Yes", true], ["No", false]])  %>


        <br><br>

        <%= f.label "Organization" %>
        <%= f.collection_select :organization_id, Organization.order(:name),:id,:name, include_blank: true %>
        <br><br>

        <%= f.submit "Submit"%>


    <% end %>