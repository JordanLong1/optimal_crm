<h1> List of leads </h1>
<ul>
<%= @leads.each do |lead| %>
    <h4>
         <li>Name:</li> 
    </h4>
    <%= lead.name %> 
    <br><br>

    <h4>
        <li>Email:</li>
      </h4>
      <%= lead.email %>
     <br><br>

    <h4>
        <li> Phone number:</li>
        </h4>
        <%= lead.phone_number %>
      <br><br>

        <h4>
        <li> Customer? </li>
        </h4>
        <%= lead.customer%>
       <br><br>

       <%= link_to "Edit lead", edit_lead_path(lead) %>
      <br><br>
      <%= link_to "Delete lead", lead_path(lead), method: :delete, data: { confirm: "Really?" }%>
      <br><br>


<% end %>   
</ul>