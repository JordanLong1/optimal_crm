<!DOCTYPE html>
<html>
  <head>
    <title>OptimalCrm</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

     <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
     <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
        <%= render 'layouts/header'%>
        <div class="container">
        <% if flash[:alert] %>
        <%= flash[:alert] %>
        <% end %>

        <% if flash[:notice] %>
        <%= flash[:notice] %>
        <% end %>
    <%= yield %>
    <%= render 'layouts/footer'%>
    </div>
  </body>
</html>
